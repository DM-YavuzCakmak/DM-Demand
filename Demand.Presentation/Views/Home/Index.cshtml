    function updateProduct(parentNode) {
        debugger;
        var selectedCompanyId = $('#companyName').val();
        var locationUnitId = $('#locationUnits').val();
        var companyBrandCode = 1;
        if (locationUnitId == 2 || locationUnitId == 8) {
            companyBrandCode = 0;
        }

