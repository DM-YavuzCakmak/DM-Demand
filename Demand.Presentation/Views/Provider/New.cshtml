<script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"> </script>
<script>

    document.addEventListener("DOMContentLoaded", function () {
        const toggles = document.querySelectorAll(".submenu-toggle");
        toggles.forEach(toggle => {
            toggle.addEventListener("click", function () {
                const submenu = this.nextElementSibling;
                submenu.classList.toggle("open");
            });
        });
    });

    function validatePhoneNumber(input) {
        let digits = input.value.replace(/\D/g, '');
        const rest = digits.slice(1);
        const frequency = {};

        for (const digit of rest) {
            frequency[digit] = (frequency[digit] || 0) + 1;
            if (frequency[digit] >= 9) {
                alert("❌ Aynı rakam 9 kez tekrar edemez!");
                input.value = "";
                return;
            }
        }
    }

    $(document).ready(function () {
        

        $.getJSON('/Provider/GetProvinces', function (cities) {
            const citySelect = $("#cityId");
            citySelect.append(`<option value="">Please Select</option>`);
            $(cities).each((i, city) => {
                citySelect.append(`<option value="${city.id}">${city.name}</option>`);
            });
        });

        $("#cityId").on("change", function () {
            const districtSelect = $("#districtId");
            const taxAdministrationSelect = $("#taxAdministrationId");

            districtSelect.empty();
            taxAdministrationSelect.empty();

            const value = $(this).val();

            if (value) {
                $.getJSON(`/Provider/GetCities?provinceId=${value}`, function (districts) {
                    districtSelect.append(`<option value="">Please Select City</option>`);
                    $(districts).each((i, dist) => {
                        districtSelect.append(`<option value="${dist.id}">${dist.name}</option>`);
                    });
                });

                $.getJSON(`/Provider/GetTaxAdministration?provinceId=${value}`, function (taxOffices) {
                    taxAdministrationSelect.append(`<option value="">Please Select Tax Administration</option>`);
                    $(taxOffices).each((i, office) => {
                        taxAdministrationSelect.append(`<option value="${office.taxOfficeCode}">${office.taxOfficeDescription}</option>`);
                    });
                });
            }
        });
    });
</script>
<script>
    function SubmitForm() {

        const model = {
            CompanyName: $("#companyName").val(),
            CityId: $("#cityId").val(),
            DistrictId: $("#districtId").val(),
            IdentityType: $("input[name='identityType']:checked").val(),
            TaxNumber: $("#taxNumber").val(),
            TaxAdministrationId: $("#taxAdministrationId").val(),
            Email: $("#email").val(),
            Phone: $("#phone").val(),
            AddressLine: $("#addressLine1").val()
        };

        // Basit validasyon
        if (!model.CompanyName || !model.CityId || !model.DistrictId || !model.IdentityType ||
            !model.TaxNumber || !model.TaxAdministrationId || !model.Phone || !model.AddressLine) {
            toastr.error(`Lütfen tüm zorunlu alanları doldurun.`, "Hata");
            return;
        }

        // Kimlik türüne göre uzunluk kontrolü
        if (model.IdentityType === "1" && model.TaxNumber.length !== 10) {
            toastr.error("Vergi Numarası 10 haneli olmalıdır.", "Hata");
            return;
        }

        if (model.IdentityType === "2" && model.TaxNumber.length !== 11) {
            toastr.error("TCKN 11 haneli olmalıdır.", "Hata");
            return;
        }

        $.ajax({
            url: "/Provider/Create",     // Controller endpoint
            type: "POST",
            contentType: "application/json; charset=utf-8",
            data: JSON.stringify(model),
            success: function (res) {
                if (res.success) {
                    toastr.success("Tedarikçi başarıyla kaydedildi.", "Başarılı");
                    location.reload(); // istersen ayrı sayfaya yönlendirebilirsin
                } else {
                    toastr.error("Hata: " + res.message, "Hata");
                }
            },
            error: function (err) {
                console.log(err);
                toastr.error(`Beklenmeyen bir hata oluştu.`, "Hata");
            }
        });
    }

</script>